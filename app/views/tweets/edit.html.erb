<% if @tweet.errors.present? %>
    <h3>エラーがあります。</h3>
    <ul>
    <% @tweet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>

<%= form_for @tweet , url: {action: :update} do |f| %>
    <%= f.label :message, 'メッセージ' %>
    <p><%= f.text_area :message, size: "50x4" %></p>
    <%= f.submit '更新' %>
<% end %>